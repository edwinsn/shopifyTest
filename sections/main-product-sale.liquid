<div id="main">
  <h1 id="product_title">{{ product.title }}</h1>
  <div class="flex gap-5 center wrap">
    <div id="product-carrousel-container" style="min-width:550px;">
      {% render 'product-carrousel' %}
    </div>
    <div id="product-details-container">
      {% render 'product-details', blocks: section.blocks %}
    </div>
  </div>
</div>
<style>
  .flex {
    display: flex;
  }

  .center {
    justify-content: center;
  }

  #product-container {
    width: 100vw;
  }

  #product-carrousel-container {
    flex-basis: 50%;
    overflow: hidden;
  }

  #product-details-container {
    flex-basis: 38%;
  }
</style>
{% schema %}
{
  "name": "Main Product Sale",
  "class": "section",
  "blocks": [
    {
      "type": "social_button",
      "name": "Social Button",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "url",
          "label": "URL",
          "default": "https://"
        }
      ]
    }
  ]
}
{% endschema %}
